---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div id="app" class="relative h-screen p-2 gap-2 resize-none">
      <aside
        class="[grid-area:aside] flex-col flex overflow-auto bg-green-200 resize-x"
      >
        Aside
      </aside>
      <main class="[grid-area:main] bg-red-200 overflow-auto resize-x">
        Main
      </main>
      <footer class="[grid-area:resume] bg-blue-300 overflow-auto resize-y">
        Footer
      </footer>
    </div>
  </body>
</html>

<style>
  #app {
    display: grid;
    grid-template-areas:
      "aside main"
      "resume resume";
    grid-template-columns: 1fr 2fr;
    grid-template-rows: 2fr 1fr;
  }
</style>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
  }
  body {
    overflow: hidden;
  }
</style>
